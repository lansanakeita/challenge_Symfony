{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div id="login_logo" class="mb-5">
    <a href="{{ path('app_home') }}"><img src="assets/images/Logo_MyFitLog.svg" alt="" loading="lazy"
            style="height: 100px;margin-left:90px" /></a>
</div>
<div id="login">

    <img src="assets/images/inscription.png" alt="" loading="lazy" style="height: 550px; " />


    <div style="align-items: center;">
        <h1>Se connecter</h1>
        <h2>Suivez votre sant√© avec MyFitLog </h2>

        <img src="assets/images/inscription.png" alt="" loading="lazy" />

        <form method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="container">

                <div><label for="inputEmail">Email</label></div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
                <div><label for="inputPassword">Mot de passe</label></div>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me
                functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
        </form>
        <p>Pas encore Inscrit? <a href="{{path('app_register')}}">ici</a></p>
    </div>
</div>
{% endblock %}